<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/Widget.PrayerTimes.TextView</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
        <item name="android:statusBarColor">@color/highlight_light</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>

    </style>

    <style name="AppTheme.Launcher" parent="@style/AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="Widget.PrayerTimes.TextView" parent="@android:style/Widget.Material.TextView">
        <item name="android:textAppearance">@style/TextAppearance.PrayerTimes.Content</item>
        <item name="android:lineSpacingMultiplier">@dimen/text_line_spacing</item>
    </style>

    <style name="TextAppearance.PrayerTimes.Content" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/qs_regular</item>
    </style>

    <style name="TextAppearance.PrayerTimes.Title" parent="@style/TextAppearance.AppCompat.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/qs_bold</item>
    </style>

    <style name="Widget.PrayerTimes.FABlikeButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:fontFamily">@font/qs_medium</item>
        <item name="android:letterSpacing">0.055</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:minHeight">52dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Widget.PrayerTimes.BorderlessButton" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/qs_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="Widget.PrayerTimes.OutlinedButton" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:fontFamily">@font/qs_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">52dp</item>
    </style>

    <style name="Widget.PrayerTimes" parent="@android:style/Widget" />

    <style name="Widget.PrayerTimes.Dialog">
        <item name="android:background">@drawable/dialog_bg</item>
        <item name="android:elevation">@dimen/dialog_elevation</item>
    </style>

    <style name="Theme.PrayerTimes.Dialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!--https://medium.com/halcyon-mobile/implementing-googles-refreshed-modal-bottom-sheet-4e76cb5de65b-->
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>
