<?xml version="1.0" encoding="utf-8"?>
<shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle"   >

    <stroke
        android:width="5dp"
        android:color="@color/white"
        android:dashGap="2dp"
        android:dashWidth="8dp"
    />

    <gradient
            android:angle="90"
            android:centerX="0.1"
            android:centerY="0.5"
            android:startColor="#F53F18"
            android:centerColor="#F03912"
            android:endColor="#eb2f06"
            android:type="linear"/>

    <padding
            android:left="5dp"
            android:top="5dp"
            android:right="5dp"
            android:bottom="5dp"    >
    </padding>

    <corners
            android:radius="13dp"   >
    </corners>

</shape>